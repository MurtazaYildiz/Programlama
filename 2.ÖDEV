SORU 1
x=int(input("Toplam satış miktarı:"))
y=int(input("Hammadde maliyeti:"))
z=int(input("Bakım onarım giderleri:"))
q=int(input("Sevkiyat giderleri:"))
w=int(input("Satın alınan hizmet giderleri:"))
katmadegerciro=(x-(y+z+q+w))
if (int(katmadegerciro)>1000):
    print("İşletmenin katma değer cirosu yüksektir.")
elif (int(katmadegerciro)<500):
    print("İşletmenin katma değer cirosu düşüktür.")
else:
    print("İşletmenin katma değer cirosu normaldir.")



SORU 2
def ikibinonaltiYiliHesapla (): 
    x= int(input("İkibinonaltı yılı çalışılan süreyi giriniz:"))
    y= int(input("İkibinonaltı yılı toplam müsteri sayısını giriniz:"))

    ikibinonaltiYili=(x/y)
    return ikibinonaltiYili

def ikibinonyediYiliHesapla ():
    z= int(input("İkibinonyedi yılı çalışılan süreyi giriniz:"))
    q= int(input("İkibinonyedi yılı toplam müşteri sayısını giriniz:"))
    
    ikibinonyediYili=(z/q)
    return ikibinonyediYili

def aralarindakiFarkHesapla ():
    x= int(input("İkibinonaltı yılı çalışılan süreyi giriniz:"))
    y= int(input("İkibinonaltı yılı toplam müsteri sayısını giriniz:"))
    z= int(input("İkibinonyedi yılı çalışılan süreyi giriniz:"))
    q= int(input("İkibinonyedi yılı toplam müşteri sayısını giriniz:"))
    
    aralarindakiFark=((z/q)-(x/y))
    return aralarindakiFark
    
  SORU 4
  def donembasiStokHesapla():
  x=int(input("koltuk sayısını giriniz:"))
  y=int(input("yatak sayısını giriniz:"))
  z=int(input("dolap sayısını giriniz:"))
  donembasiStok=(x+y+z)
  return donembasiStok

def donemsonuStokHesapla():
  x=int(input("koltuk sayısını giriniz:"))
  y=int(input("yatak sayısını giriniz:"))
  z=int(input("dolap sayısını giriniz:"))
  a=int(input("satılan koltuk sayısını giriniz:"))
  b=int(input("satılan yatak sayısını giriniz:"))
  c=int(input("satılan dolap sayısını giriniz:"))
  d=int(input("alınan koltuk sayısını giriniz:"))
  e=int(input("alınan yatak sayısını giriniz:"))
  f=int(input("alınan dolap sayısını giriniz:"))
  donemsonuStok=((x+y+x)-(a+b+c))+(d+e+f)
  return donemsonuStok

def ortalamaStokHesapla():
 m=int(input("dönembaşı stok bilgilerini girin:"))
 n=int(input("dönemsonu stok bilgilerini girin:"))
 ortalamastok=((m+n)/2)
 return ortalamaStok

